<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.prateek.demo.mainmenu">


    <TextView
        android:text="WELCOME "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="normal"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/bg_register" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/profile_fb_nav"
        android:layout_width="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name_fb_nav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Studio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/name_fb_nav"
        android:textStyle="normal|bold"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_toRightOf="@+id/profile_fb_nav"
        android:layout_toEndOf="@+id/profile_fb_nav"
        android:textSize="40sp" />

    <Button
        android:text="Sign-Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/deauth"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:background="@color/btn_logut_bg"
        android:layout_below="@+id/profile_fb_nav"
        android:layout_alignRight="@+id/name_fb_nav"
        android:layout_alignEnd="@+id/name_fb_nav"
        android:layout_toEndOf="@+id/profile_fb_nav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="GO-TO FINAL PAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deauth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:id="@+id/fb_final_pop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:textColor="@color/cardview_light_background"
        android:background="@color/bg_main" />

</RelativeLayout>
